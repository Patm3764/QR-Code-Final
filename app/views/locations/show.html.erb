<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @location.name %>
</p>

<style type="text/css">

 table {
  border-width: 0;
  border-style: none;
  border-color: #0000ff;
  border-collapse: collapse;
}
 td {
   border-width: 0;
   border-style: none;
   border-color: #0000ff;
   border-collapse: collapse;
   padding: 0;
   margin: 0;
   width: 10px;
   height: 10px;
 }
 td.black { background-color: #000; }
 td.white { background-color: #fff; }
</style>

<table>
<% @qr.modules.each_index do |x| %>
  <tr>
  <% @qr.modules.each_index do |y| %>
    <% if @qr.dark?(x,y) %>
      <td class="black"/>
    <% else %>
      <td class="white"/>
    <% end %>
  <% end %>
  </tr>
<% end %>
</table>

<p>
  <strong>Tag:</strong>
  <%= @location.tag %>
</p>

<p>
  <strong>Event:</strong>
  <%= @location.event %>
</p>

<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', event_path(@location.event_id)  %>
